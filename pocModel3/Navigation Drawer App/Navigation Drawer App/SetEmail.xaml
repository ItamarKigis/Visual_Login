<UserControl x:Class="Navigation_Drawer_App.SetEmail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Navigation_Drawer_App"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <TextBlock x:Name="SetEmailMsg" Margin="219,114,10,359" RenderTransformOrigin="0.337,-1.33" FontSize="20" Foreground="Red" Visibility="Hidden">
            You don't have an email set to reset the password in case of forgetting,<LineBreak /> insert email here:</TextBlock>
        <TextBlock x:Name="ChangeEmailMsg" Text="Your email to reset the password is set, you can change it here:" 
                    Margin="219,114,10,359" RenderTransformOrigin="0.337,-1.33" Foreground="LightGreen" FontSize="20" Visibility="Hidden"/>
        <TextBox x:Name="inputEmail" Margin="220,246,242,302" />
        <Button x:Name="SetButton" Content="Set" Height="50" Width="100" Margin="390,339,410,211" Click="SetButton_Click"/>
    </Grid>
</UserControl>
